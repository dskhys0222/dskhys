{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2022", "DOM"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2022",
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist", "**/*.test.ts"],
    "include": ["src/**/*"]
}
